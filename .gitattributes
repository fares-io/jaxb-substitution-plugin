# force all files to LF endings
*.yml        text eol=lf
*.md         text eol=lf
*.sh         text eol=lf
*.xml        text eol=lf
*.xsd        text eol=lf
*.wsdl       text eol=lf
*.jxb        text eol=lf
*.xjb        text eol=lf
*.xew        text eol=lf
*.j2         text eol=lf
*.py         text eol=lf
*.sql        text eol=lf
*.java       text eol=lf
*.properties text eol=lf
.gitignore   text eol=lf
Vagrantfile  text eol=lf

# only windoze files get CRLF endings
*.bat        text eol=crlf
*.cmd        text eol=crlf

# ignore binary files
*.jar        binary
*.zip        binary
*.tar.gz     binary
*.png        binary
*.jpg        binary
*.jpeg       binary
*.gif        binary
*.class      binary
*.doc        binary
*.docx       binary
*.vsd        binary
*.vsdx       binary